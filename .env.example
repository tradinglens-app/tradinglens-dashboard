# =================================================================
# Authentication Configuration (Clerk)
# =================================================================
# Required: Clerk API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Authentication Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard/overview"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard/overview"

# =================================================================
# Clerk Webhooks (Optional)
# =================================================================
WEBHOOK_SECRET=your_webhook_secret

# =================================================================
# Error Tracking Configuration (Sentry)
# =================================================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_ORG=your_sentry_org
NEXT_PUBLIC_SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Set to 'true' to disable Sentry in development
NEXT_PUBLIC_SENTRY_DISABLED="true"

# =================================================================
# Database Configuration
# =================================================================
# Main application database
DATABASE_URL="postgresql://user:password@host:port/database"

# Thread/Community specific database
THREAD_DATABASE_URL="postgresql://user:password@host:port/database?sslmode=disable"
